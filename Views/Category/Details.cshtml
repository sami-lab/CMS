@model WebBuilder.ViewModel.Categories.CategoriesViewModel

@{
    ViewData["Title"] = "类别详细信息";
}

<div class="container">
    <h1>
        细节
    </h1>

    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalProducts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalProducts)
        </dd>
    </dl>

    <div>
        @Html.ActionLink("编辑", "Edit", new { id = Model.id }) |
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Products" asp-action="Create" asp-route-categoryId="@Model.id">
                创建产品
            </a> <span>|</span>
            <a asp-action="Categories">
                返回目录
            </a> <span>|</span>
        }
        else
        {
            <a asp-action="Index">
                返回目录
            </a> <span>|</span>
        }
        @await Html.PartialAsync("~/Views/Shared/Modal.cshtml", Model.id)<span>|</span>
        <a asp-controller="Products" asp-action="ProductsInCategory" asp-route-id="@Model.id" asp-route-name="@Model.CompanyName">
            产品展示
        </a> |

        <a asp-controller="Company" asp-action="Details" asp-route-name="@Model.CompanyName">
            公司
        </a>

    </div>
</div>