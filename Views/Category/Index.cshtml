@model IEnumerable<WebBuilder.ViewModel.Categories.GroupByCompany>
<div class="container">
    @if (Model.Any())
    {

        @foreach (var s in Model)
        {
            <div class="bg-info p-3 rounded mt-5">
                <h3><a target="_blank" class="text-decoration-none text-light font-weight-bold" style="color: inherit;" asp-controller="Companies" asp-action="Details" asp-route-name="@s.CompanyName"> @s.CompanyName </a></h3>
            </div>

            <hr />

            @if (s.Categories.Any())
            {
                <div class="container-fluid py-2">
                    <div style="overflow-x:scroll">
                        <div class=" d-flex  flex-row flex-nowrap mb-2 ">
                            @foreach (var item in s.Categories)
                            {
                                <div class="card shadow col-lg-3 col-md-3 col-sm-6 col-12 m-3">

                                    <div class="card-header font-weight-bolder text-center text-capitalize">
                                        @item.CategoryName
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text text-center text-dark">Total @item.TotalProducts Products Registered Yet </p>
                                    </div>

                                    <div class="card-footer text-center">
                                        <a asp-action="Details" asp-route-id="@item.id" class="card-link">Details</a>
                                        <a asp-controller="Company" asp-action="Details" asp-route-name="@item.CompanyName" class="card-link">Company Details</a>
                                        <a asp-controller="Products" asp-action="ProductsInCategory" asp-route-categoryId="@item.id" asp-route-name="@item.CompanyName" class="card-link">Products</a>
                                    </div>

                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-center align-items-center">
                    <div class="card">
                        <div class="card-header">
                            No Category Registered yet
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                Use the button below to create a Category
                            </h5>
                            <a class="btn btn-primary" style="width:auto"
                               asp-controller="Category" asp-action="Create">
                                Add new Category
                            </a>
                        </div>
                    </div>
                </div>
            }
            <hr />
            <br />
        }
    }
    else
    {
        <div class="d-flex justify-content-center align-items-center">
            <div class="card my-5">
                <div class="card-header">
                    No Category Registered yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a Category
                    </h5>
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="Category" asp-action="Create">
                        Add new Category
                    </a>
                </div>
            </div>
        </div>
    }
</div>

