<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" />
    </environment>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Libre+Baskerville&family=Roboto:wght@500&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet" />
    <link href="~/lib/fontawesome-free-5.13.0-web/css/all.min.css" rel="stylesheet" />
    <script src="~/lib/fontawesome-free-5.13.0-web/js/all.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body class="mb-0">
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
                <div class="sidebar-brand">
                    <a asp-controller="Home" asp-action="Index">北京聚盈科技有限公司</a>
                    <div id="close-sidebar">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
                <div class="sidebar-header row">
                    <div class="user-pic" id="userpic">
                        <img class="img-responsive img-rounded" src="~/Image/emp.jpg" asp-append-version="true" alt="User picture">
                    </div>
                    <div class="user-info">
                        <span class="user-name" style="font-size:smaller">
                            <strong> @User.Identity.Name</strong>
                        </span>

                        @if (User.IsInRole("Super Admin"))
                        {
                            <span class="user-role"> Administrator </span>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <span class="user-role"> Admin </span>
                        }
                        else
                        {
                            <span class="user-role"> User </span>
                        }
                        <span class="user-status">
                            <i class="fa fa-circle text-success"></i>
                            <span>Online</span>
                        </span>
                    </div>
                </div>
                <!-- sidebar-header  -->
                <div class="sidebar-search">
                    <div>
                        <form id="search-form" class="input-group" method="get" asp-controller="Details" asp-action="Details">
                            <input type="text" name="name" required min="1" class="form-control search-menu" placeholder="Search Company">
                            <div class="input-group-append">
                                <button class="input-group-text" type="submit">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </div>
                        </form>
                        <script>
                            document.getElementById("search-form").onsubmit = function (e) {
                                if (e.target.name.value.length == 0) {
                                    e.preventDefault();
                                }
                            }
                        </script>
                    </div>
                </div>
                <!-- sidebar-search  -->
                <div class="sidebar-menu">
                    <ul>
                        <li class="header-menu">
                            <span>General</span>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                                <span class="badge badge-pill badge-warning">New</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-controller="Home" asp-action="Index">
                                            User Home
                                            <span class="badge badge-pill badge-success">Pro</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Administration" asp-action="admin">Admin Home</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Companies</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    @if (User.IsInRole("Super Admin"))
                                    {
                                        <li>
                                            <a asp-controller="Company" asp-action="Index">
                                                Details
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a asp-controller="Company" asp-action="Details">Details</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Company" asp-action="Edit">
                                                Update Company
                                            </a>
                                        </li>

                                    }

                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="far fa-money-bill-alt"></i>
                                <span>Categories</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a asp-controller="Category" asp-action="Categories">
                                                Details
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Category" asp-action="Create">
                                                Create
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Super Admin"))
                                    {
                                        <li>
                                            <a asp-controller="Category" asp-action="Index">Categories</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Products</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a asp-controller="Products" asp-action="PremiumProducts">
                                                Premium Products
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Products" asp-action="Products">
                                                Details
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Products" asp-action="Create">
                                                Create
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Products" asp-action="ListProducts">
                                                List Products
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Super Admin"))
                                    {
                                        <li>
                                            <a asp-controller="Products" asp-action="Index">Products</a>
                                        </li>

                                    }

                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="far fa-copyright"></i>
                                <span>Account</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>

                                    <li>
                                        <a asp-controller="Account" asp-action="Profile">Profile</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Administration" asp-action="UsersStats">Visit Stats</a>
                                    </li>
                                    @if (User.IsInRole("Super Admin"))
                                    {
                                        <li>
                                            <a asp-controller="Account" asp-action="Register">Register</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="far fa-money-bill-alt"></i>
                                <span>Contacts</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-controller="Administration" asp-action="Contacts">
                                            Contacts
                                        </a>
                                    </li>


                                </ul>
                            </div>
                        </li>

                        @if (User.IsInRole("Super Admin"))
                        {

                            <li class="header-menu">
                                <span>Extra</span>
                            </li>
                            <li>
                                <!-- sidebar-header  -->
                                <div class="sidebar-search">
                                    <div>
                                        <form id="search-form1" class="input-group" method="get" asp-controller="Account" asp-action="Profile">
                                            <input type="text" name="id" required autocomplete="off" class="form-control search-menu" placeholder="Search User">
                                            <div class="input-group-append">
                                                <button class="input-group-text" type="submit">
                                                    <i class="fa fa-search" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        </form>
                                        <script>
                                            document.getElementById("search-form1").onsubmit = function (e) {
                                                if (e.target.Cusref.value.length == 0) {
                                                    e.preventDefault();
                                                }
                                            }
                                        </script>
                                    </div>
                                </div>
                                <!-- sidebar-search  -->
                            </li>
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <i class="fas fa-user-shield"></i>
                                    <span>Administration</span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul>

                                        <li>
                                            <a asp-controller="Administration" asp-action="ListUsers">All Users</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Administration" asp-action="GetAllRoles">All Roles</a>
                                        </li>


                                    </ul>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <!-- sidebar-menu  -->
            </div>
            <!-- sidebar-content  -->
            <div class="sidebar-footer">
                <a asp-controller="Account" asp-action="Profile" title="Profile">
                    <i class="fas fa-user-circle"></i>
                    <span class="badge-sonar"></span>
                </a>
                <a asp-controller="Account" asp-action="Logout" title="Logout">
                    <i class="fa fa-power-off"></i>
                </a>
            </div>
        </nav>
        <main class="page-content">

            <div class="w-100 ">
                @if (IsSectionDefined("Scripts"))
                {
                    @RenderSection("Scripts")
                }

                @RenderBody()
            </div>
        </main>
    </div>




    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" ></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>

    <script>
        window.onload = async function () {
            //Profile
            const req1 = await fetch('/Home/GetProfile');
            const data1 = await req1.json();
            if (data1 != null) {
                document.querySelector('#userpic img').src = '/Image/User/' + data1;
            }
            else {
                document.querySelector('#userpic img').src = '/Image/emp.jpg';
            }
        }
    </script>
</body>
</html>
